<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Orbitron:wght@400;700;900&display=swap"
        rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- AOS Animation -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <!-- Particles.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/particles.js/2.0.0/particles.min.js"></script>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="dark-theme">

    <!-- Navbar -->
    <header>
        <nav class="navbar">
            <div class="logo">{{name}}<span>.</span></div>
            <ul class="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#experience">Experience</a></li>
                <li><a href="#education">Education</a></li>
                <li><a href="#projects">Projects</a></li>
                <li><a href="#skills">Skills</a></li>
                <li><a href="#contact" class="btn-primary">Connect</a></li>
            </ul>
            <div class="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main>
        {{{body}}}
    </main>

    <!-- Footer -->
    <footer id="footer">
        <div class="footer-container">
            <div class="footer-row">
                <div class="footer-col" data-aos="fade-up">
                    <div class="footer-logo">{{name}}<span>.</span></div>
                    <p class="footer-desc">Passionate software developer specializing in high-performance Full Stack
                        applications with enhanced UI and with connecting Front-end and Back-end Services.</p>
                </div>
                <div class="footer-col" data-aos="fade-up" data-aos-delay="100">
                    <h4>Quick Navigation</h4>
                    <ul class="footer-nav">
                        <li><a href="#home">Home</a></li>
                        <li><a href="#experience">Experience</a></li>
                        <li><a href="#projects">Projects</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-col" data-aos="fade-up" data-aos-delay="200">
                    <h4>Professional Links</h4>
                    <div class="footer-social-grid">
                        <a href="https://linkedin.com/in/pasupureddy-rajesh" target="_blank" title="LinkedIn"><i
                                class="fab fa-linkedin"></i></a>
                        <a href="https://github.com/rajeshpasupureddy2002" target="_blank" title="GitHub"><i
                                class="fab fa-github"></i></a>
                        <a href="https://leetcode.com/u/rajeshpasupureddy2002/" target="_blank" title="LeetCode"><i
                                class="fas fa-code"></i></a>
                        <a href="https://www.geeksforgeeks.org/profile/rajeshpasupraaz" target="_blank" title="GFG"><i
                                class="fas fa-laptop-code"></i></a>
                    </div>
                </div>
                <div class="footer-col" data-aos="fade-up" data-aos-delay="300">
                    <h4>Quick Connect</h4>
                    <form class="footer-contact-form" id="footerWhatsappForm">
                        <input type="text" id="footerNameInput" placeholder="Name" required>
                        <textarea id="footerMessageInput" placeholder="Message" rows="3" required></textarea>
                        <button type="submit" class="btn-mini">Send on WhatsApp</button>
                    </form>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2026 {{name}}. All Rights Reserved. Made with <i class="fas fa-heart"
                        style="color: var(--primary-color);"></i></p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // AOS Initialization
        AOS.init({
            duration: 1000,
            offset: 120,
            once: true,
            easing: 'ease-out-cubic'
        });


        // Navbar Scroll Effect
        window.addEventListener('scroll', () => {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.style.background = 'rgba(32, 32, 32, 0.98)';
                navbar.style.boxShadow = '0 10px 30px rgba(0,0,0,0.3)';
            } else {
                navbar.style.background = 'rgba(32, 32, 32, 0.95)';
                navbar.style.boxShadow = '0 2px 20px rgba(0,0,0,0.1)';
            }
        });

        // Smooth Scroll for Nav Links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Mobile Menu Toggle
        const hamburger = document.querySelector('.hamburger');
        const navLinks = document.querySelector('.nav-links');

        hamburger.addEventListener('click', () => {
            hamburger.classList.toggle('active');
            navLinks.classList.toggle('active');
        });

        // WhatsApp Form Logic
        document.getElementById('footerWhatsappForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const name = document.getElementById('footerNameInput').value;
            const message = document.getElementById('footerMessageInput').value;
            const whatsappNumber = '916261217249';
            const text = `Hello Rajesh, my name is ${name}. ${message}`;
            window.open(`https://wa.me/${whatsappNumber}?text=${encodeURIComponent(text)}`, '_blank');
        });
    </script>
</body>

</html>